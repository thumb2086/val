{
  "name": "valorant-prototype",
  "version": "0.1.0",
  "description": "A 3D FPS prototype inspired by Valorant",
  "type": "module",
  "main": "server/server.js",
  "scripts": {
    "start": "npm run build && node server/server.js",
    "dev": "nodemon --watch server --watch configs server/server.js",
    "lint": "eslint .",
    "test": "jest",
    "build": "webpack --mode production",
    "client": "webpack serve --open --mode development"
  },
  "keywords": [
    "three.js",
    "socket.io",
    "fps",
    "game",
    "multiplayer"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "three": "^0.138.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.2",
    "react": "^19.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  }
}
